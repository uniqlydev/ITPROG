<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/home.css">
    <script type="text/javascript" src="scripts/home/home.js"></script>
</head>
<body>
    <div class="menu-layer">
        <div class="main-layer">

            <!-- For head -->
            <%- include('partials/header-layer') %>

            <!-- Navigation layer -->
            <%- include('partials/navigation-layer') %>

            <!-- Tiles layer -->
            <%- include('partials/meals-layer') %>
            <%- include('partials/sides-layer') %>
            <%- include('partials/drinks-layer') %>

            <div class="cancel-layer">
                <div class="button-menu-container">
                    <button class = "button-cancel"id = "button-cancel" onclick="clearOrder()">Cancel</button>
                </div>
            </div>


        </div>
        <!-- FOR CART -->
        <div class="cart-container">
            <h1>CART</h1>
            <!-- Scrollable container for cart items -->
            <form action="/views/home/checkout.ejs" method="POST"></form>
            <div class="scrollable">
                <ul id="orders">
                    <li>
                        
                    </li>
                </ul>
            </div>

            <div class="price-div">
                <div>
                <span class="label">Subtotal:</span>
                <span class="money" id="subtotal">0</span>
                </div>

                <div>
                <span class="label">Discount:</span>
                <span class="money" id="discount">0</span>
                </div>
            </div>

            <div class="total-div">
                <span class="label">Total:</span>
                <span class="money" id="total">0</span>
            </div>

            <div class="button-div">
                <!-- Submit button that links to checkout.ejs -->
                <input type="submit" class="checkout" value="Checkout" name="checkout"></input>
                <!-- <button class="checkout">checkout</button> -->
            </div>

        </form>
        </div>
        <!-- END OF CART -->
    </div>
</body>
</html>