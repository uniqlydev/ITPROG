<div class="cart-container">
    <div class="cart-head">
       <p class="title">New Order Bill</p>
       <p class="date">Today - <%= date %></p> 
    </div>
    <form method="post" action="/checkout" id="submitForm" class="form-wrapper">
        <div class="main-meal">
            <input type="text" id="mainm" name="meal" required placeholder="Meal" readonly>
            <input type="text" id="quantitymain" name="mquan" required value="1" min="1" readonly>
        </div>

        <br>
        <div class="sides">
            <input type="text" id="sides" name="sides" required placeholder="Sides" readonly>
            <input type="text" id="quantityside" name="squan" required value="1" min="1" readonly>
        </div>

        <br>
        <div class="drinks">
          <input type="text" id="drinks" name="drink" required placeholder="Drinks" readonly>
            <input type="text" id="quantitydrink" name="dquan" required value="1" min="1" readonly>  
        </div>
        <br>
        <br>
        <br>
        
        <label for="item">Total:</label>
        <input type="text" id="total" name="total" required readonly value="0">
    
        <button type="submit" class="button-order" onclick="checkFields(event)">Add to Cart</button>
    </form>
</div>